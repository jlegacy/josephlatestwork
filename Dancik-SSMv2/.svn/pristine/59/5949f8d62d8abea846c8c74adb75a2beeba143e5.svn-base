<!-- reports/base.ejs -->
<div id=newSelectionButtons class="ssm-Box_A bttn-section">
    <div class="widthControl">
        <label>Create a new:</label>
        <form action="#openCustomerSearch">
            <input type="submit" value="Selection" class="greenButton float-left ssm-newselection-bttn-position">
        </form>
        <form action="#openNewReminder">
            <input type="submit" value="Reminder" class="greenButton float-left ssm-newreminder-bttn-position">
        </form>
    </div>
</div>
<div id="ssm_Reports">
	<div class="widthControl">
		<div class="ssm_mainPage_hdr">Reports</div>
		<div class="ssm_interfaceSurrounder inline-labels">
			<div class="lightBlueGradientHeader">
				<div class="containerRow">
					<label>Select Report Type:</label>
					<div class="ssm-styled-select w250 float-left" id="ssm_report_type_select_wrapper"> 
						<select id="ssm_report_type_select">
							<option value="">Select Report</option>
							<option value="drilldown">Drilldown</option>
							<option value="commissions">Commissions</option>
						</select> 
					</div>
				</div>
			</div>
			<div id="ssm_Reports_Placeholder">
				<!-- container for drilldown or commission items -->
			</div>
			<!-- -->
		</div>	
		<div class="detachedFooter">
			<input type="submit" value="Submit" class="greenButton" style="display:none;" id="ssm_submitReport">
			<span class="commandButton float-left"><a class="backToTop" href="#Top" title="Back to Top"></a></span>
			
		</div>
	</div>
</div>
<!-- END reports/base.ejs -->