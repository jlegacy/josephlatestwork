<div id="ssm_lower_body"> 
    <div id='ssm_Reminders'>
        <div class='widthControl'>
            <div class="padding5"></div>
            <div id = "ssm_Dayview_Section" class="ssm_interfaceSurrounder">
                <div class="ssm_headerBarGray">
                    <div class="padding5">
                        <span class="commandButton float-left ssm_headerIcon"> <img class="reminders" src="../images/clear.gif"> </span>
                        <div class="title float-left">
                            Reminders: Add/Edit
                        </div>
                    </div>
                </div>
                <div id="ssm_Dayview_left">
                    <div id="ssm_Dayview_left_container">
                    
                        <div class="ssm-input-labels ssm_detailview_link">Date</div>
                        <div id="ssm_input_date" class="date-wrapper">
                        	<input type="text" name="ssm_Date"/>
                            <img class="ssm-dates" src='../images/clear.gif'>
                        </div>
                        
                        <div class="ssm-input-labels ssm_detailview_link">Subject</div>
                        <div id="ssm_input_brief">
                        	<input type='text' class='longer' maxlength="50" name="ssm_Brief"/>
                        </div>
                        
                        <div class="ssm-input-labels ssm_detailview_link">Notes</div>
                        <div id="ssm_input_description">
                        	<textarea name="ssm_description" class='longer'></textarea>
                        </div>
                        
                        <div class="footer">
                           	<input id="ssm_delete_button" class ="greyButton float-right" value="Delete" type="button"></input>
