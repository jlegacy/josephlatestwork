<div id="ssm_Selection">
    <div class='ssm-Box-E header'>
	   <div class='widthControl'>	
		  <div class='header-reload'>
			 <%= $App.Template("selection/heading.ejs").render(
				    
				{
				    ssm_id:
				    this.ssm_id
					   , header:
				    {
					   rtl_name:
					   '-'
				    }
				    , status: 
				
				[] }) %>
		  </div>

		  <div id="ssm_SelectionTabs">
			 <ul class="tabListing">
				<li class="tab"><a href="#ssm_SelectionHeader">Header</a></li>
				<li class="tab"><a href="#ssm_SelectionItems">Items</a></li>
			 </ul>

			 <div id='ssm_SelectionHeader'>
				
				    <div class='surrounder'>
					   <div id="ssm_SelectionDetails">
						  <div id="ssm_Selection_CustInfo" class="category-detail cust-info">
							 <div class="ssm_busy">
								<div class="ssm_load_indicator_text">Loading results</div>
								<div class="ssm_load_indicator"></div>
							 </div>
						  </div>
						  <div id="ssm_Selection_Dates" class="category-detail dates hide">
							 <div class="ssm_busy">
								<div class="ssm_load_indicator_text">Loading results</div>
								<div class="ssm_load_indicator"></div>
							 </div>
						  </div>
						  <div id="ssm_Selection_References" class="category-detail references hide">
							 <div class="ssm_busy">
								<div class="ssm_load_indicator_text">Loading results</div>
								<div class="ssm_load_indicator"></div>
							 </div>
						  </div>
						  <div id="ssm_Selection_JobInfo" class="category-detail job-info hide">
							 <div class="ssm_busy">
								<div class="ssm_load_indicator_text">Loading results</div>
								<div class="ssm_load_indicator"></div>
							 </div>
						  </div>

						  <div id="ssm_Selection_Logs" class="category-detail log hide">
							 <div class="ssm_busy">
								<div class="ssm_load_indicator_text">Loading results</div>
								<div class="ssm_load_indicator"></div>
							 </div>
						  </div>

						  <div id="ssm_Selection_NotePad" class="category-detail notepad hide">
							 <div class="ssm_busy">
								<div class="ssm_load_indicator_text">Loading results</div>
								<div class="ssm_load_indicator"></div>
							 </div>
						  </div>

						  <div id="ssm_Selection_Print" class="category-detail print hide">
							 <div class="ssm_busy">
								<div class="ssm_load_indicator_text">Loading results</div>
								<div class="ssm_load_indicator"></div>
							 </div>
						  </div>

						  <div id="ssm_Selection_BuyerAccount" class="category-detail buyeraccount hide"></div>
					   </div>


					   <div id="ssm_SelectionNotes">
						  <%= $App.Template("selection/notes.ejs").render()%>
					   </div>
				    </div>   

				    <div class="bottom-padding-footer"></div>
				
				<div id="ssm_SelectionCategories">
				    <div class='category-option cust-info selected'>
					   <a href="#openSelectionDetail/cust-info" title="Customer Information">
						  <img class="customer-info" src='../images/clear.gif'/>
					   </a>
				    </div>
				    <div class='category-option dates'>
					   <a href="#openSelectionDetail/dates" title="Dates">
						  <img class="dates" src='../images/clear.gif'/>
					   </a>
				    </div>
				    <div class='category-option references'>
					   <a href="#openSelectionDetail/references" title="References">
						  <img class="references" src='../images/clear.gif'/>
					   </a>
				    </div>
				    <div class='category-option job-info'>
					   <a href="#openSelectionDetail/job-info" title="Job Information">
						  <img class="job-info" src='../images/clear.gif'/>
					   </a>
				    </div>
				    <div class='category-option log'>
					   <a href="#openSelectionDetail/log" title="Log">
						  <img class="log" src='../images/clear.gif'/>
					   </a>
				    </div>
				    <div class='category-option notepad'>
					   <a href="#openSelectionDetail/notepad" title="Notepad">
						  <img class="notepad" src='../images/clear.gif'/>
					   </a>
				    </div>
				</div>	
			 </div>

			 <div id='ssm_SelectionItems'>
				<%= $App.Template("selectionItems/init-base.ejs").render()%>
			 </div>
		  </div>
	   </div>
    </div>
</div>